---
import { cn } from "@lib/utils";

type Props = {
  href: string;
  external?: boolean;
  underline?: boolean;
}

const { href, external, underline = false, ...rest } = Astro.props;
---

<a
  href={href}
  target={ external ? "_blank" : "_self" }
  class={cn("inline-block text-muted-foreground hover:text-foreground transition-colors duration-300 ease-in-out", underline && "underline underline-offset-2")}
  {...rest}>
  <slot/>
</a>
