---
import { menuLinks, siteConfig } from "@/site.config";

const year = new Date().getFullYear();
---

<footer
	class="sm:mx-auto max-w-screen-sm mt-auto flex w-full flex-col items-center justify-center gap-y-2 pt-16 pb-4 text-center align-top font-medium sm:flex-row sm:justify-between text-muted-foreground text-sm sm:text-xs"
>
	<div class="me-0 sm:me-4">
		&copy; {siteConfig.author}
		{year}
	</div>
	<nav
		aria-labelledby="footer_links"
		class="flex gap-x-2 sm:gap-x-0 sm:divide-x sm:divide-border"
	>
		<p id="footer_links" class="sr-only">More on this site</p>
		{
			menuLinks.map((link) => (
				<a class="hover:text-foreground px-2 sm:px-4 py-2 hover:underline sm:py-0" href={link.path}>
					{link.title}
				</a>
			))
		}
	</nav>
</footer>
